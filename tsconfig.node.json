{
    "compilerOptions": {
        "composite": true,
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": false,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "./shared/*"
            ],
            "@electron/*": [
                "./electron/*"
            ],
            "@src/*": [
                "./src/*"
            ],
            "@ui/*": [
                "./src/components/ui/*"
            ],
            "@features/*": [
                "./src/features/*"
            ]
        },
        "outDir": "dist/electron",
        "rootDir": ".",
        "lib": [
            "ES2020",
            "DOM"
        ]
    },
    "include": [
        "electron/**/*",
        "shared/**/*",
        "src/utils/automation/**/*"
    ]
}
