{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        /* Linting */
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "tsBuildInfoFile": "./.cache/tsconfig.app.tsbuildinfo",
        "noFallthroughCasesInSwitch": true,
        "allowJs": false,
        "baseUrl": ".",
        "paths": {
            "@src/*": [
                "./src/*"
            ],
            "@shared/*": [
                "./shared/*"
            ],
            "@electron/*": [
                "./electron/*"
            ],
            "@ui/*": [
                "./src/components/ui/*"
            ],
            "@features/*": [
                "./src/features/*"
            ],
            "@platform/*": [
                "./src/platform/*"
            ]
        },
        "types": [
            "vite/client",
            "vitest/globals",
            "@testing-library/jest-dom",
            "node"
        ]
    },
    "include": [
        "src",
        "shared"
    ]
}
